{
  "name": "liongard-playwright-framework",
  "version": "1.0.0",
  "description": "Playwright automation framework for Liongard",
  "main": "index.js",
  "scripts": {
    "clean:allure": "npx rimraf allure-results allure-report",
    "test:allure": "npx playwright test --reporter=line,allure-playwright",
    "allure:report": "allure generate ./allure-results --clean -o ./allure-report && allure open ./allure-report",
    "test": "npx playwright test",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:report": "npm run test && npm run allure:generate && node sendMail.js",
    "send:report": "node sendMail.js",
    "allure:pdf": "node pdfReport.js",
    "report:full": "npm run clean:allure && npm run test:allure && npm run allure:generate && npm run allure:pdf"
  },
  "author": "Omkar Yadav",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "allure-commandline": "^2.20.1",
    "allure-playwright": "^2.15.1",
    "dotenv": "^16.3.1",
    "puppeteer": "^24.10.0"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "dependencies": {
    "nodemailer": "^7.0.3"
  }
}
